asm
        CALL     EAX2PChar
        PUSH     ESI
        XCHG     ESI, EAX
        XOR      EDX, EDX
        TEST     ESI, ESI
        JE       @@exit
        LODSB
        {$IFDEF PARANOIA}
        DB $3C, '$'
        {$ELSE}
        CMP      AL, '$'
        {$ENDIF}
        JNE      @@1
