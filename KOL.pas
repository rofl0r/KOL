        CMP      DL, pf16bit
        JNZ      @@3
        DEC      EDX
@@3:    PUSH     EDX
        XOR      EDX, EDX
        CALL     SetHandleType
        MOV      EAX, [EBX].fDIBHeader
        MOVZX    EAX, [EAX].TBitmapInfoHeader.biBitCount
        CALL     Bits2PixelFormat
