  TempFileName:=StringOfChar(#0,ofn.nMaxFile); {Vadim Petrov}
  ofn.lpstrFile:=StrLCopy(pchar(TempFileName), pchar(fFileName),
                   Min(ofn.nMaxFile,Length(fFileName)));

