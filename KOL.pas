        {$ENDIF}
        JBE      @@3

        {$IFDEF PARANOIA}
        DB $2C, $11
        {$ELSE}
        SUB      AL, 'A' - '0'
        {$ENDIF}
        {$IFDEF PARANOIA}
        DB $3C, 5
        {$ELSE}
        CMP      AL, 'F' - 'A'
        {$ENDIF}
        JBE      @@2

        {$IFDEF PARANOIA}
        DB $2C, 32
        {$ELSE}
        SUB      AL, 32
        {$ENDIF}
        {$IFDEF PARANOIA}
        DB $3C, 5
        {$ELSE}
