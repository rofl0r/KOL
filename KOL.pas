        POP       EDX  // EDX = @Result
        POP       EAX  // EAX = fClientBottom
        SUB       [EDX].TRect.Bottom, EAX
        POP       EAX  // EAX = fClientTop
        ADD       [EDX].TRect.Top, EAX  // Correct Result.Top
        POP       EAX  // EAX = fClientRight
