    else
    if not Sender.DblBufTopParent.fDblBufPainting then
      Sender.Invalidate;
    end;
    //Result := FALSE;
  end
    else
  if Msg.message = CM_COMMAND then
  begin
    case HiWord( Msg.wParam ) of
    CBN_DROPDOWN:
         begin
           Sender.fDropped := True;
           Sender.fCurIdxAtDrop := Sender.CurIndex;
