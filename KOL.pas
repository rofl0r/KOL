{$IFDEF ASM_VERSION}
procedure OpenDirDlgCenter( Wnd: HWnd );
asm
        PUSH     EBX
        MOV      EBX, EAX

        ADD      ESP, -16
        PUSH     ESP
        PUSH     EAX
        CALL     GetWindowRect
        POP      EDX          // EDX = Left
        POP      ECX          // ECX = Top
        POP      EAX          // EAX = Right
        SUB      EAX, EDX     // EAX = W
        POP      EDX          // EDX = Bottom
        SUB      EDX, ECX     // EDX = H
        XOR      ECX, ECX
        INC      ECX
        PUSH     ECX  // prepare True
        PUSH     EDX  // prepare H
        PUSH     EAX  // prepare W

        INC      ECX
@@1:
        PUSH     ECX

        DEC      ECX
        PUSH     ECX
        CALL     GetSystemMetrics

        POP      ECX
        SUB      EAX, [ESP+4]
        SAR      EAX, 1
        PUSH     EAX

        LOOP     @@1

        {
        PUSH     SM_CYSCREEN
        CALL     GetSystemMetrics
        SUB      EAX, [ESP+4]
        SAR      EAX, 1
        PUSH     EAX

        PUSH     SM_CXSCREEN
        CALL     GetSystemMetrics
        SUB      EAX, [ESP+4]
        SAR      EAX, 1
        PUSH     EAX
        }

        PUSH     EBX
        CALL     MoveWindow
        POP      EBX
end;
